@model Machine

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Machine</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="MachineName" disabled class="form-control border-0 shadow" />
                    <label asp-for="MachineName" style="font-size:20px"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="MachineCode" disabled class="form-control border-0 shadow" />
                    <label asp-for="MachineCode" style="font-size:20px"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Purpose_MTBF" disabled class="form-control border-0 shadow" />
                    <label asp-for="Purpose_MTBF" style="font-size:20px"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Purpose_MTTR" disabled class="form-control border-0 shadow" />
                    <label asp-for="Purpose_MTTR" style="font-size:20px"></label>
                </div>
                <div class="row py-3">
                    <div class="col-md-6 mb-sm-2 ">
                        <button class="form-control btn btn-danger w-100" type="submit">Delete</button>

                    </div>
                    <div class="col-md-6 ">
                        <a asp-controller="Machine" asp-action="index" class="form-control btn btn-secondary">Back To Machine List</a>

                    </div>

                </div>
            </div>
        </form>

    </div>

</div>